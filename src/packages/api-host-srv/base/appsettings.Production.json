{
  "Logging": {
    "LogLevel": {
      "Default": "Warning",
      "Microsoft.AspNetCore": "Warning",
      "System.Net.Http.HttpClient": "Warning"
    }
  },
  "Serilog": {
    "MinimumLevel": {
      "Default": "Warning",
      "Override": {
        "Microsoft": "Error",
        "Microsoft.AspNetCore": "Error",
        "System": "Error"
      }
    },
    "WriteTo": [
      {
        "Name": "Console",
        "Args": {
          "outputTemplate": "[{Timestamp:yyyy-MM-dd HH:mm:ss.fff zzz}] [{Level:u3}] {Message:lj}{NewLine}{Exception}"
        }
      },
      {
        "Name": "File",
        "Args": {
          "path": "/var/log/universo-platformo/api-host-.log",
          "rollingInterval": "Day",
          "retainedFileCountLimit": 30,
          "outputTemplate": "[{Timestamp:yyyy-MM-dd HH:mm:ss.fff zzz}] [{Level:u3}] {Message:lj}{NewLine}{Exception}"
        }
      }
    ]
  },
  "ConnectionStrings": {
    "DefaultConnection": "Host=${DB_HOST};Port=${DB_PORT};Database=${DB_NAME};Username=${DB_USER};Password=${DB_PASSWORD};SSL Mode=Require;Trust Server Certificate=true",
    "Redis": "${REDIS_CONNECTION_STRING}"
  },
  "Supabase": {
    "Url": "${SUPABASE_URL}",
    "Key": "${SUPABASE_KEY}",
    "JwtSecret": "${SUPABASE_JWT_SECRET}"
  },
  "Jwt": {
    "Issuer": "${JWT_ISSUER}",
    "Audience": "authenticated",
    "ValidateIssuer": true,
    "ValidateAudience": true,
    "ValidateLifetime": true,
    "ValidateIssuerSigningKey": true,
    "ClockSkew": "00:02:00"
  },
  "Cors": {
    "AllowedOrigins": [
      "${FRONTEND_URL}"
    ],
    "AllowCredentials": true,
    "AllowedMethods": [ "GET", "POST", "PUT", "DELETE", "OPTIONS", "PATCH" ],
    "AllowedHeaders": [ "Authorization", "Content-Type", "Accept", "Origin", "X-Requested-With" ],
    "ExposedHeaders": [ "Content-Disposition" ]
  },
  "RateLimiting": {
    "EnableGlobalRateLimit": true,
    "GlobalRateLimit": {
      "PermitLimit": 100,
      "WindowInMinutes": 1
    },
    "PerEndpointRateLimits": {
      "/api/auth": {
        "PermitLimit": 5,
        "WindowInMinutes": 1
      },
      "/api/publish": {
        "PermitLimit": 3,
        "WindowInMinutes": 10
      }
    }
  },
  "Caching": {
    "DefaultExpirationMinutes": 30,
    "UseDistributedCache": true,
    "MemoryCacheOptions": {
      "SizeLimit": 2048,
      "CompactionPercentage": 0.20,
      "ExpirationScanFrequency": "00:10:00"
    }
  },
  "DetailedErrors": false,
  "ShowPII": false,
  "AllowedHosts": "${ALLOWED_HOSTS}"
}
